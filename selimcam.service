[Unit]
Description=SelimCam v2.0
After=multi-user.target
Wants=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/selimcam2
Environment="PYTHONUNBUFFERED=1"
Environment="SDL_VIDEO_KMSDRM_ROTATION=right"
Environment="SDL_FBDEV_ROTATION=right"
ExecStart=/usr/bin/python3 -u /home/pi/selimcam2/main.py
Restart=on-failure
RestartSec=10
MemoryMax=256M
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target